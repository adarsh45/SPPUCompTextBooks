<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1c1c1">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSubj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#c1c1c1"
                android:fontFamily="sans-serif-black"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="28sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="30dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/pdf" />

                    <Button
                        android:id="@+id/chap1_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/pdf_btn_style"
                        android:onClick="openPdf"
                        android:text=""
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <ImageButton
                        android:onClick="downloadFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/stat_sys_download_done" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="30dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/pdf" />

                    <Button
                        android:id="@+id/chap2_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/pdf_btn_style"
                        android:onClick="openPdf"
                        android:text=""
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <ImageButton
                        android:onClick="downloadFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/stat_sys_download_done" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="30dp"
                app:cardCornerRadius="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/pdf" />

                    <Button
                        android:id="@+id/chap3_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/pdf_btn_style"
                        android:onClick="openPdf"
                        android:text=""
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <ImageButton
                        android:onClick="downloadFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/stat_sys_download_done" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="30dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/pdf" />

                    <Button
                        android:id="@+id/chap4_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/pdf_btn_style"
                        android:onClick="openPdf"
                        android:text=""
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <ImageButton
                        android:onClick="downloadFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/stat_sys_download_done" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="30dp"
                app:cardCornerRadius="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/pdf" />

                    <Button
                        android:id="@+id/chap5_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/pdf_btn_style"
                        android:onClick="openPdf"
                        android:text=""
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <ImageButton
                        android:onClick="downloadFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/stat_sys_download_done" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>