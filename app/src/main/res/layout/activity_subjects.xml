<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_unit"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginVertical="14dp"/>

            <TextView
                android:id="@+id/textSubj"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="28sp"
                android:layout_marginVertical="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHint"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorHint"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/colorPrimary"
                        android:textSize="26sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="01"
                        />
                  
                    <Button
                        android:id="@+id/chap1_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/colorHint"
                        android:onClick="openPdf"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <ImageButton
                        android:id="@+id/downloadBtn_1"
                        android:onClick="downloadFile"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_download"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:contentDescription="@string/download_btn_content_descrip"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHint"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorHint">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="02"
                        />

                    <Button
                        android:id="@+id/chap2_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/colorHint"
                        android:onClick="openPdf"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <ImageButton
                        android:id="@+id/downloadBtn_2"
                        android:onClick="downloadFile"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_download"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:contentDescription="@string/download_btn_content_descrip"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHint"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorHint">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="03"
                        />

                    <Button
                        android:id="@+id/chap3_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/colorHint"
                        android:onClick="openPdf"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <ImageButton
                        android:id="@+id/downloadBtn_3"
                        android:onClick="downloadFile"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_download"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:contentDescription="@string/download_btn_content_descrip"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHint"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorHint"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="04"
                        />

                    <Button
                        android:id="@+id/chap4_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/colorHint"
                        android:onClick="openPdf"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <ImageButton
                        android:id="@+id/downloadBtn_4"
                        android:onClick="downloadFile"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:contentDescription="@string/download_btn_content_descrip"
                        android:src="@drawable/ic_download"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHint"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorHint">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="05"
                        />

                    <Button
                        android:id="@+id/chap5_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/colorHint"
                        android:onClick="openPdf"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <ImageButton
                        android:id="@+id/downloadBtn_5"
                        android:onClick="downloadFile"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_download"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:contentDescription="@string/download_btn_content_descrip"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHint"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorHint">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="06"
                        />

                    <Button
                        android:id="@+id/chap6_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/colorHint"
                        android:onClick="openPdf"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <ImageButton
                        android:id="@+id/downloadBtn_6"
                        android:onClick="downloadFile"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_download"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:contentDescription="@string/download_btn_content_descrip"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>