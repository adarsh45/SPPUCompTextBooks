        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDM" />



    <TextView
        android:id="@+id/textOOP"
        android:layout_width="wrap_content"
